extends layout

-var page = 'Home'


mixin imageItem(link, img, description, likes)
  li
    a(href=link)
      .background-image-holder
        img.background-image(alt=likes + ' Likes', src=img)

mixin twitterItem(link, avatar, username, userscreen, tweet)  
  .col-sm-4.twitter-item
    p.tweet!=twitterText(tweet)
  

block content
  if articles[0]
    section.image-bg.overlay.parallax.pt180.pb180.pt-xs-80.pb-xs-80
      .background-image-holder
        img.background-image(alt="image", src=articles[0].uploadedFile)
      .container.text-center
        .row
          .col-md-6.col-sm-6.col-md-push-3.col-sm-push-3
            h2= articles[0].name
            p.lead.mb48.mb-xs-32= articles[0].description
      .align-bottom.text-center
        a.btn.btn-white.mb32(href="#") Pitch Us
        ul.list-inline.social-list.mb24
          li
            a(href="https://twitter.com/dmngdco")
              i.ti-twitter-alt
          li
            a(href="https://www.facebook.com/dmngd")
              i.ti-facebook
  
  section.bg-secondary
    .container.text-center
      i.ti-twitter-alt.icon.icon-lg.color-primary.mb40.mb-xs-24
      .row
        each e, i in data.twitterFeed
          if i < 3
            +twitterItem('http://twitter.com/' + e.user.screen_name, e.profile_image_url_https, e.user.name, e.user.screen_name, e.text)

  if articles[1]
    section.image-square.left.bg-secondary
      .col-md-6.image
        .background-image-holder
          img.background-image(alt="image", src=articles[1].uploadedFile)
      .col-md-6.col-md-offset-1.content
        h3= articles[1].name
        p.mb0= articles[1].description
  
  if articles[2]
    section.image-square.right.bg-secondary
      .col-md-6.image
        .background-image-holder
          img.background-image(alt="image", src=articles[2].uploadedFile)
      .col-md-6.content
        h3= articles[2].name
        p.mb0= articles[2].description

  if articles[3]
    section.image-square.left.bg-secondary
      .col-md-6.image
        .background-image-holder
          img.background-image(alt="image", src=articles[3].uploadedFile)
      .col-md-6.col-md-offset-1.content
        h3= articles[3].name
        p.mb0= articles[3].description
  
  if articles[4]
    section.image-square.right.bg-secondary
      .col-md-6.image
        .background-image-holder
          img.background-image(alt="image", src=articles[4].uploadedFile)
      .col-md-6.content
        h3= articles[4].name
        p.mb0= articles[4].description

  if articles[5]
    section.image-square.left.bg-secondary
      .col-md-6.image
        .background-image-holder
          img.background-image(alt="image", src=articles[5].uploadedFile)
      .col-md-6.col-md-offset-1.content
        h3= articles[5].name
        p.mb0= articles[5].description

  section.bg-secondary
    .container.text-center
      i.ti-instagram.icon.icon-lg.color-primary.mb40.mb-xs-24
      .row
        .col-sm-12
          .lightbox-grid.square-thumbs()
            ul
              each e, i in data.instagramFeed.data
                if i < 12
                  +imageItem(e.link, e.images.standard_resolution.url, e.caption, e.likes.count)
  
  section.image-bg.parallax.overlay
    .background-image-holder
      img.background-image(alt="image", src="img/home-2-5.jpg")
